@model Admin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">  <!-- Add Bootstrap Icons -->
    <style>
        body {
            background-color: #f4f7fc; /* Light gray background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto; /* Center the form */
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .title {
            text-align: center;
            font-size: 24px;
            font-weight: 700;
            color: #333;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 25px;
            padding: 12px 20px;
            font-size: 16px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .form-btn {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .form-btn:hover {
                background-color: #0056b3;
            }

            .form-btn:active {
                background-color: #00408b;
            }

        .forgot-password {
            text-align: center;
            margin-top: 10px;
        }

            .forgot-password a {
                font-size: 14px;
                color: #007bff;
                text-decoration: none;
            }

                .forgot-password a:hover {
                    text-decoration: underline;
                }

        .validation-errors {
            color: red;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <p class="title">Admin LogIn</p>
        <form method="post">

          


            <div class="form-group">
                <i class="bi bi-person-fill"></i> <label asp-for="User_name" class="form-label">Username</label>
                <input asp-for="User_name" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="User_name" class="validation-errors"></span>
            </div>

            <div class="form-group">
                <i class="bi bi-lock-fill"></i> <label asp-for="Password" class="form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="validation-errors"></span>
            </div>

            <button type="submit" class="form-btn">Log in</button>

            <div class="forgot-password">
                <a href="#">Forgot Password?</a>
            </div>
        </form>
    </div>

</body>
</html>
