@using EmployeeCrud.Models.Employee
@model List<Employee>

<div class="container mt-5">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="display-4 text-primary">Employee List</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle-dotted"></i> Create New Employee
            </a>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Designation</th>
                        <th>Department</th>
                        <th>Joining Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Designation</td>
                            <td>@obj.Department</td>
                            <td>@obj.Joining_date.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <!-- Edit Button -->
                                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.Id"
                                       class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Employee">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <!-- Delete Button -->
                                    <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.Id"
                                       class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete Employee">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Include Bootstrap and Font Awesome -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}

<!-- Optional Custom Styles -->
<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn-sm {
        padding: 0.375rem 0.75rem;
    }

    .btn-warning, .btn-danger {
        transition: all 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

        .btn-danger:hover {
            background-color: #dc3545;
        }

    .card {
        background-color: #f8f9fa;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    /* Tooltips */
    .btn-group .btn {
        margin-left: 5px;
        margin-right: 5px;
    }

    /* Add some spacing to the page */
    .container {
        padding-top: 20px;
    }
</style>
