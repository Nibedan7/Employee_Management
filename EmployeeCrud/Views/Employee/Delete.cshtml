@using EmployeeCrud.Models.Employee
@model Employee


    <form method="post">
        <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="Designation"></label>
            <input asp-for="Designation" class="form-control" disabled />
            

        </div>

        <div class="mb-3 row">
            <label asp-for="Department"></label>
            <input asp-for="Department" class="form-control" disabled/>
            
        </div>

        <div class="mb-3 row">
            <label asp-for="Joining_date"></label>
            <input asp-for="Joining_date" class="form-control" disabled/>
          
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary form-control">Back to EmployeeList</a>
            </div>
        </div>

        </div>
    </form>

