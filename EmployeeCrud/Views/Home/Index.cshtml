@{
    ViewData["Title"] = "Employee Management - Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background-color: #007bff;
            color: white;
            padding: 80px 0;
            text-align: center;
            border-radius: 0 0 20px 20px;
        }

            .hero-section h1 {
                font-size: 50px;
                font-weight: 700;
            }

            .hero-section p {
                font-size: 18px;
            }

        .feature-cards {
            margin-top: 50px;
        }

        .feature-card {
            transition: transform 0.3s;
        }

            .feature-card:hover {
                transform: translateY(-10px);
            }

            .feature-card i {
                font-size: 50px;
                color: #007bff;
            }

            .feature-card .card-body {
                text-align: center;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1>Welcome to Employee Management</h1>
            <p class="lead">A comprehensive platform to manage employees effectively. Easily add, update, view, and delete employee records.</p>
            <a asp-controller="Employee" asp-action="Login" class="btn btn-light btn-lg">View Employee List</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container feature-cards">
        <div class="row">
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body">
                        <i class="bi bi-person-plus"></i>
                        <h5 class="card-title">Add New Employee</h5>
                        <p class="card-text">Easily add new employees to your system and manage their records in just a few steps.</p>
                        <a asp-controller ="Admin" asp-action="Login" class="btn btn-primary">Add Employee</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body">
                        <i class="bi bi-person-lines-fill"></i>
                        <h5 class="card-title">View Employees</h5>
                        <p class="card-text">Browse through the list of employees and manage their details with ease.</p>
                        <a asp-controller="Admin" asp-action="Login" class="btn btn-primary">View Employees</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card feature-card">
                    <div class="card-body">
                        <i class="bi bi-pencil-square"></i>
                        <h5 class="card-title">Update Employee</h5>
                        <p class="card-text">Update employee records for any changes to their personal or work-related information.</p>
                        <a asp-controller="Admin" asp-action="Login" class="btn btn-primary">Update Employee</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
